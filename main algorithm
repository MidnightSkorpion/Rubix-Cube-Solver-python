    cube = []
    for index in range(18):
        faceline = [pixel() for triple in range(3)]
        cube.append(faceline)

    return cube



def populateCube(cube): #makes cube initially a solved 
    for y in range(18):
        for x in range(3):
            if y <= 2:
                cube[y][x].color = "white"
                cube[y][x].xpos = 1 + x
                cube[y][x].ypos = 1 + x
                cube[y][x].zpos = 4
            elif 3 <= y <= 5:
                cube[y][x].color = "yellow"
                cube[y][x].xpos = 1 + x
                cube[y][x].ypos = 1 + x
                cube[y][x].zpos = 0
            elif 6 <= y <= 8:
                cube[y][x].color = "green"
                cube[y][x].xpos = 1 + x
                cube[y][x].ypos = 0
                cube[y][x].zpos = 1 + x
            elif 9 <= y <= 11:
                cube[y][x].color = "red"
                cube[y][x].xpos = 4
                cube[y][x].ypos = 1 + x
                cube[y][x].zpos = 1 + x
                
            elif 12 <= y <= 14:
                cube[y][x].color = "blue"
                cube[y][x].xpos = 1 + x
                cube[y][x].ypos = 4
                cube[y][x].zpos = 1 + x
            elif 15 <= y <= 17:
                cube[y][x].color = "orange"
                cube[y][x].xpos = 0
                cube[y][x].ypos = 1 + x
                cube[y][x].zpos = 1 + x

    return cube

def changeCube():
    pass
    

def checkCorrect(cube):
    correctPixel = 0
    iscorrect = False
    for y in range(18):
        for x in range(3):
            if y <= 2 and cube[y][x].color == "white":
                correctPixel = correctPixel + 1

            elif 3 <= y <= 5 and cube[y][x].color == "yellow":
                correctPixel = correctPixel + 1

            elif 6 <= y <= 8 and cube[y][x].color == "green":
                correctPixel = correctPixel + 1

            elif 9 <= y <= 11 and cube[y][x].color == "red":
                correctPixel = correctPixel + 1

                
            elif 12 <= y <= 14 and cube[y][x].color == "blue":
                correctPixel = correctPixel + 1

            elif 15 <= y <= 17 and cube[y][x].color == "orange":
                correctPixel = correctPixel + 1
                
    correctFace = correctPixel/(3*3)
    
    if correctFace == 6:
        iscorrect = True
        print("rubix cube is solved!!")

    else:
        print("rubix cube isnt solved!!")
            
def main():
    cube = makeCube()
    populateCube(cube)
    changeCube
    checkCorrect(cube)


main()
