   
import numpy as np

def makeCube():    
    class pixel:
        def __init__(self):
            self.xpos = 0
            self.ypos = 0
            self.zpos = 0
            self.color = ""
            
        #everything in here is copy pasted sleuth from online, its applying a matrices on the points(i gave up tryna learn matrices when its more than 2 by 2) effect can be achieved through 
            
        def moveU(self):
            # rotate white face +90 around y-axis
            R = np.array([[0,0,1],[0,1,0],[-1,0,0]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveAU(self):
            # rotate white face -90 around y-axis
            R = np.array([[0,0,-1],[0,1,0],[1,0,0]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveF(self):
            # rotate green face +90 around x-axis
            R = np.array([[1,0,0],[0,0,-1],[0,1,0]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveAF(self):
            # rotate green face -90 around x-axis
            R = np.array([[1,0,0],[0,0,1],[0,-1,0]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveR(self):
            # rotate orange face +90 around z-axis
            R = np.array([[0,-1,0],[1,0,0],[0,0,1]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveAR(self):
            # rotate orange face -90 around z-axis
            R = np.array([[0,1,0],[-1,0,0],[0,0,1]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveL(self):
            # rotate red face +90 around z-axis
            R = np.array([[0,1,0],[-1,0,0],[0,0,1]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        def moveAL(self):
            # rotate red face -90 around z-axis
            R = np.array([[0,-1,0],[1,0,0],[0,0,1]])
            v = np.array([self.xpos, self.ypos, self.zpos])
            self.xpos, self.ypos, self.zpos = (R @ v).tolist()

        #effect can also be achieved using the manual way like this but i wanna talk abt matrices in my PS    
        """
