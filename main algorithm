            self.xpos = x
            self.ypos = z
            self.zpos = -y

        # Orange face (R) rotations around z-axis
        def moveR(self):
            x = self.xpos
            y = self.ypos
            z = self.zpos
            self.xpos = -y
            self.ypos = x
            self.zpos = z

        def moveAR(self):
            x = self.xpos
            y = self.ypos
            z = self.zpos
            self.xpos = y
            self.ypos = -x
            self.zpos = z

        # Red face (L) rotations around z-axis (opposite of R)
        def moveL(self):
            x = self.xpos
            y = self.ypos
            z = self.zpos
            self.xpos = y
            self.ypos = -x
            self.zpos = z

